<AnchorPane fx:id="mainpane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.SignUpFormController">
    <children>
      <ImageView fx:id="img_backSignUp">
         <image>
            <Image url="backsighup.jpg" />
         </image>
      </ImageView>
        <GridPane layoutX="3.0" layoutY="1.0" prefHeight="355.0" prefWidth="371.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="242.0" minWidth="10.0" prefWidth="168.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="392.0" minWidth="10.0" prefWidth="203.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="username" GridPane.columnIndex="1" />
                <TextField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="firstname" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="lastname" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="city" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <DatePicker fx:id="datepk_age" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Label text="User name" textFill="WHITE" />
                <Label text="Password" textFill="WHITE" GridPane.rowIndex="1" />
                <Label text="First name" textFill="WHITE" GridPane.rowIndex="2" />
                <Label text="Last name" textFill="WHITE" GridPane.rowIndex="3" />
                <Label text="Birth date(yyyy-mm-dd)" textFill="WHITE" GridPane.rowIndex="4" />
                <Label text="City" textFill="WHITE" GridPane.rowIndex="5" />
            </children>
        </GridPane>
        <Button layoutX="90.0" layoutY="385.0" mnemonicParsing="false" onAction="#handleSubmit" prefHeight="31.0" prefWidth="109.0" text="Submit" />
        <Button layoutX="249.0" layoutY="387.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="31.0" prefWidth="109.0" text="Back" />
    </children>
</AnchorPane>
