      <Label layoutX="409.0" layoutY="112.0" prefHeight="59.0" prefWidth="322.0" text="Fill the fields you wish to update. " wrapText="true">
         <font>
            <Font size="19.0" />
         </font></Label>
      <TextField fx:id="username" layoutX="409.0" layoutY="62.0" prefHeight="47.0" prefWidth="300.0" promptText="Enter the username of the user you wish to update" />
    </children>
